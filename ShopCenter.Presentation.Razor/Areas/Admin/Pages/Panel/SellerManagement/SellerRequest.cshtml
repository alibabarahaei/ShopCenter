@page
@using ShopCenter.Application.Extensions
@model ShopCenter.Presentation.Razor.Areas.Admin.Pages.Panel.SellerManagement.SellerRequestModel
@{
}
<section id="extended">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">دکمه های عمل</h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-block">


                        @if (Model.FilterSeller != null )
                    {
                        <table class="table table-responsive-md text-center">

                            <thead>
                            <tr>
                                
                                <th>شناسه</th>
                                <th>نام فروشگاه</th>
                                <th>تلفن</th>
                                <th>وضعیت</th>
                                <th>اقدامات</th>
                            </tr>
                            </thead>

                            <tbody>

                        @foreach (var seller in Model.FilterSeller.Sellers)
                        {

                            <tr>
                                <td>@seller.Id</td>

                                            <td>@seller.StoreName</td>
                                            <td> @seller.Phone</td>
                                            <td> @seller.StoreAcceptanceState.GetEnumName()</td>
                               
                                <td>
                                    <a class="success p-0" data-original-title="" title="">
                                        <i class="fa fa-pencil font-medium-3 mr-2"></i>
                                    </a>
                                    <a class="info p-0" data-original-title="" title="">
                                        <i class="fa fa-check font-medium-3 mr-2"></i>
                                    </a>
                                    <a class="danger p-0" data-original-title="" title="">
                                        <i class="fa fa-trash-o font-medium-3 mr-2"></i>
                                    </a>
                                </td>
                            </tr>

                        }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        
                    }
                        
                        
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
