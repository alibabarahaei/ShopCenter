@model ShopCenter.Presentation.Razor.Areas.User.Pages.Dashboard.RequestSellerPanelModel
@{

    ViewData["Title"] = "درخواست پنل فروشندگی";
}



            <div class="middle-container">
    <form method="Post" class="form-checkout" asp-page="RequestSellerPanel">
                    <div class="form-checkout-row">
                        <label for=""  asp-for="StoreName" >نام فروشگاه <abbr class="required" title="ضروری" style="color:red;">*</abbr></label>
            <input type="text" id="StoreName" class="form-control" asp-for="StoreName">
