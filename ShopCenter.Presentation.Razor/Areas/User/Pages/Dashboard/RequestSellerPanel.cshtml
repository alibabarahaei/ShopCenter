            <input type="text" id="Phone" class=" form-control text-left" asp-for="Phone">
                        
                        <label for="address">
                            آدرس
                            <abbr class="required" title="ضروری" style="color:red;">*</abbr>
                        </label>
                        <textarea rows="5" cols="30" id="address" class="textarea-name-checkout form-control" asp-for="Address"></textarea>

                        <div class="AR-CR">
                            <button class="btn-registrar"> ثبت فروشگاه</button>
                <a asp-page="./SellerRequests" asp-area="User" class="cancel-edit-address">لیست درخواست ها</a>
