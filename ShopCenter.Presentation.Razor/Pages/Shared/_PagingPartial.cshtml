@model ShopCenter.Application.DTOs.Paging.BasePaging



<div class="text-center">
    <nav aria-label="Page navigation">
        <ul class="pagination pagination-separate pagination-round pagination-flat">
            @if (Model.StartPage < Model.PageId)
            {
                <li class="page-item">
                    <a  class="page-link" aria-label="Previous" onclick="FillPageId(@(Model.PageId - 1))">
                        <span aria-hidden="true">« قبلی</span>
                        <span class="sr-only">قبلی</span>
                    </a>
                </li>
            }
            @for (int i = Model.StartPage; i <= Model.EndPage; i++)
            {
                <li class="page-item"  class=" page-item @(Model.PageId == i ? "active" : "")"><a onclick="FillPageId(@i)" class="page-link">@i</a></li>
            }
            @if (Model.EndPage > Model.PageId)
            {
                <li class="page-item">
                    <a  class="page-link" aria-label="Next" onclick="FillPageId(@(Model.PageId + 1))">
                        <span aria-hidden="true">بعدی »</span>
                        <span class="sr-only">بعدی</span>
                    </a>
                </li>
            }
          
        </ul>
    </nav>
</div>